@model IEnumerable<ScamAlert.Models.Scam>

@{
    ViewBag.Title = "Home Page";
}
@Html.Raw(ViewBag.Message)
<div class="jumbotron">
    <h1>Scam Alert</h1>
    <p class="lead">Scam artists and malicious people are all over the internet, but you can now you can learn how they are attempting to get your information.</p>
</div>
@using (Html.BeginForm("IndexSearch", "Home", FormMethod.Post))
{
    <input class="" type="text" name="Search" />
    <input class="btn btn-default" type="submit" name="btnConfirm" value="Search" />
}
<table class="table">
    <tr>
        <th>
            Scam Name
        </th>
        <th>
            Description
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.scamName)
            </td>
            <td width="55%">
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td width="25%">
                @Html.ActionLink("View Scam Reports", "View", new { scamId = item.scamId }, 0)
            </td>
        </tr>
    }
</table>
Can't find the Scam?
@if (User.Identity.IsAuthenticated)
{
@Html.ActionLink("Create A New One", "Create", "Scams")
}